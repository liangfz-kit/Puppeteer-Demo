{
  "extends": [
     "tslint:recommended",
     "tslint-react",
     "tslint-config-prettier",
     "tslint-microsoft-contrib/recommended"
  ],
  "linterOptions": {
     "exclude": [
        "config/**/*.js",
        "node_modules/**/*.ts",
        "coverage/**/*.js",
        "scripts/**/*.js",
        "src/registerServiceWorker.ts",
        "dist/**/*.js",
        "dist/**/*.ts",
        "lib/**/*.ts"
     ]
  },
  "rules": {
     "class-name": true,
     "comment-format": [
        true,
        "check-space"
     ],
     "indent": [
        true,
        "spaces"
     ],
     "one-line": [
        true,
        "check-open-brace",
        "check-whitespace"
     ],
     "no-console": [
        true,
        "info",
        "trace",
        "assert",
        "table"
     ],
     "no-var-keyword": true,
     "quotemark": [
        true,
        "single",
        "jsx-double"
     ],
     "jsx-boolean-value": [
        true,
        "never"
     ],
     "semicolon": [
        true,
        "always",
        "ignore-bound-class-methods"
     ],
     "whitespace": [
        true,
        "check-branch",
        "check-decl",
        "check-operator",
        "check-module",
        "check-separator",
        "check-type"
     ],
     "typedef-whitespace": [
        true,
        {
           "call-signature": "nospace",
           "index-signature": "nospace",
           "parameter": "nospace",
           "property-declaration": "nospace",
           "variable-declaration": "nospace"
        },
        {
           "call-signature": "onespace",
           "index-signature": "onespace",
           "parameter": "onespace",
           "property-declaration": "onespace",
           "variable-declaration": "onespace"
        }
     ],
     "no-internal-module": true,
     "no-trailing-whitespace": true,
     "no-null-keyword": true,
     "prefer-const": false,
     "jsdoc-format": true,
     "interface-name": false,
     "object-literal-sort-keys": false,
     "ordered-imports": false,
     "trailing-comma": [
        true,
        {
           "singleline": "never",
           "multiline": {
              "objects": "always",
              "arrays": "always",
              "functions": "never",
              "typeLiterals": "ignore",
              "imports": "always",
              "exports": "ignore"
           }
        }
     ],
     "space-within-parens": true,
     "no-duplicate-imports": true,
     "no-consecutive-blank-lines": true,
     "eofline": true,
     "import-spacing": true,
     "prefer-template": true,
     "no-angle-bracket-type-assertion": true,
     "newline-before-return": true,
     "no-unnecessary-qualifier": true,
     "use-default-type-parameter": true,
     "await-promise": true,
     "no-void-expression": [
        true,
        "ignore-arrow-function-shorthand"
     ],
     "no-unnecessary-type-assertion": true,
     "no-implicit-dependencies": [
        true,
        "dev"
     ],
     "variable-name": [
        true,
        "ban-keywords",
        "check-format",
        "allow-pascal-case"
     ],
     "ban-types": [
        true,
        "- Object\n- Avoid using the `Object` type. Did you mean `object`?",
        "- Boolean\n- Avoid using the `Boolean` type. Did you mean `boolean`?",
        "- Number\n- Avoid using the `Number` type. Did you mean `number`?",
        "- String\n- Avoid using the `String` type. Did you mean `string`?"
     ],
     "no-submodule-imports": [
        true,
        "bootstrap",
        "font-awesome",
        "jquery",
        "ionicons",
        "admin-lte",
        "brainbrowser"
     ],
     "restrict-plus-operands": true,
     "prefer-method-signature": true,
     "no-default-export": true,
     "no-for-in-array": true,
     "no-import-side-effect": [
        true,
        {
           "ignore-module": "(\\.css|brainbrowser|\\.json)$"
        }
     ],
     "type-literal-delimiter": true,
     "no-floating-promises": true,
     "no-unused-expression": true,
     "promise-function-async": true,
     "typedef": [
        true,
        "parameter",
        "arrow-parameter",
        "property-declaration",
        "member-variable-declaration",
        "array-destructuring"
     ],
     "no-any": false,
     "match-default-export-name": false,
     "no-unsafe-any": false,
     "strict-boolean-expressions": false,
     "completed-docs": false,
     "non-literal-fs-path": false,
     "function-name": [
        true,
        {
           "static-method-regex": "^[a-z][\\w\\d]+$"
        }
     ],
     "insecure-random": true,
     "jquery-deferred-must-complete": true,
     "max-func-body-length": [
        true,
        100,
        {
           "ignore-comments": true
        },
        {
           "ignore-parameters-to-function-regex": "^describe|skip|only|beforeAll$"
        }
     ],
     "only-arrow-functions": true,
     "mocha-avoid-only": true,
     "mocha-no-side-effect-code": true,
     "mocha-unneeded-done": true,
     "no-constant-condition": true,
     "no-control-regex": true,
     "no-cookies": true,
     "no-empty-line-after-opening-brace": true,
     "no-delete-expression": true,
     "no-exec-script": true,
     "function-constructor": true,
     "no-function-expression": true,
     "no-http-string": true,
     "no-invalid-regexp": true,
     "no-jquery-raw-elements": true,
     "no-multiline-string": true,
     "no-octal-literal": true,
     "no-regex-spaces": true,
     "no-relative-imports": false,
     "forin": false,
     "no-backbone-get-set-outside-model": false,
     "no-single-line-block-comment": false,
     "no-string-based-set-immediate": false,
     "no-string-based-set-interval": false,
     "no-string-based-set-timeout": false,
     "no-suspicious-comment": true,
     "no-typeof-undefined": true,
     "unnecessary-bind": true,
     "no-unnecessary-field-initialization": true,
     "no-unnecessary-local-variable": true,
     "no-unnecessary-override": true,
     "no-unnecessary-semicolons": true,
     "no-unsupported-browser-code": true,
     "no-useless-files": true,
     "no-with-statement": true,
     "prefer-array-literal": true,
     "promise-must-complete": true,
     "react-a11y-anchors": false,
     "react-a11y-aria-unsupported-elements": true,
     "react-a11y-event-has-role": true,
     "react-a11y-image-button-has-alt": true,
     "react-a11y-img-has-alt": true,
     "react-a11y-lang": true,
     "react-a11y-meta": true,
     "react-a11y-props": true,
     "react-a11y-proptypes": true,
     "react-a11y-role": true,
     "react-a11y-role-has-required-aria-props": true,
     "react-a11y-role-supports-aria-props": true,
     "react-a11y-tabindex-no-positive": true,
     "react-a11y-titles": true,
     "react-this-binding-issue": [
        true,
        {
           "allow-anonymous-listeners": true
        }
     ],
     "react-tsx-curly-spacing": [
        true,
        "never",
        {
           "allowMultiline": true
        }
     ],
     "react-unused-props-and-state": true,
     "use-named-parameter": true,
     "underscore-consistent-invocation": true,
     "use-simple-attributes": true,
     "max-classes-per-file": [
        true,
        3
     ],
     "react-a11y-input-elements": false,
     "newline-per-chained-call": false,
     "prefer-readonly": false,
     "export-name": false,
     "import-name": false,
     "chai-prefer-contains-to-index-of": false,
     "chai-vague-errors": false,
     "missing-jsdoc": false,
     "prefer-type-cast": false,
     "no-increment-decrement": false,
     "no-for-in": false,
     "interface-over-type-literal": false,
     "no-unexternalized-strings": false,
     "no-banned-terms": true,
     "no-disable-auto-sanitization": true,
     "no-document-domain": true,
     "no-document-write": true,
     "no-inner-html": true,
     "non-literal-require": true,
     "possible-timing-attack": true,
     "react-anchor-blank-noopener": true,
     "react-iframe-missing-sandbox": true,
     "react-no-dangerous-html": true
  }
}
